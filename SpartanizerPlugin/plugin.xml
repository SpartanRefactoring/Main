    name="Zoomer"
    class="il.org.spartan.plugin.preferences.revision.ZoomerPreferencesPage"
    id="il.org.spartan.plugin.ZoomerPreferencesPage"
    category="il.org.spartan.plugin.PluginPreferencesPage">
  </page>
</extension>

<!-- Preferences-->
